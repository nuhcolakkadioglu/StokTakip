@model StokTakip.Entities.Dtos.BirimDtos.BirimListDto
<h2>Birim Anasayfa</h2>

<div class="mb-2">
	<a class="btn btn-primary" asp-action="Create"> Yeni</a>
</div>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>#</th>
			<th>Adı</th>
			<th>Açıklama</th>
			<th>İşlemler</th>
		</tr>
	</thead>
	@foreach (var item in Model.Birimler)
	{
		<tr>
			<td>@item.Id</td>
			<td>@item.Adi</td>
			<td>@item.Aciklama</td>
			<td>
				<a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
				<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
			</td>
		</tr>
	}
	<tbody>
	</tbody>
</table>